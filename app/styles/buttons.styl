@import 'nib'
@import '_config'

.btn-group
  position: absolute
  top: 0
  height: 100%

.right-btn-group
  right: 0

.left-btn-group
  left: 0

.btn
  height: page-footer-height
  width: @height
  line-height: @height
  font-size: 2.5em
  // color: #555
  // color: white
  text-align: center
  float: left
  cursor: pointer
  transition(0.1s, -webkit-transform, linear)

.btn:active
  transform(scale(0.9))

.btn.active
  // background-color: rgba(0,0,0,0.2)
  // background-color: darken(accent-color, 20%)
  // background-color: #CCC

@media screen and (max-width: 600px)
  .right-btn-group
    right: 0