@import 'nib'
@import '_config'

#group, .group-layout, #wall-layout, .wall
  height: 100%

#wall-layout
  overflow: visible !important

.group-layout
  padding-left: 80px

.wall
 width: 0
  overflow: visible

.post
  position: absolute
  width: 500px
  overflow: visible !important
  height: 100%
  .post-images
    width: 100%
    overflow: hidden
   transition: border-color 0.1s, max-height 0.2s ease-in

    img
      width: 100%

  header
   padding: 1em
   background-color: #333
    color: white
   border-bottom: 1px solid #555
    box-sizing: content-box

    img
      float: left
      margin-right: 1em

    .post-header-text
      transition: height 0.2s ease-out
      height: 1.5em
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis

@media screen and (min-height: 440px)
  .post-images
    max-height: 300px !important

@media screen and (min-height: 700px)
  .post-images
    max-height: 400px !important

@media screen and (min-height: 800px)
  .post-images
    max-height: 500px !important

@media screen and (min-height: 1000px)
  .post-images
    max-height: 600px !important

.post-header-title
  font-size: 1.1em

.post-header-date
  font-size: 0.9em
  color: #999

.post-header-text
  font-size: 0.9em

.post > div
  padding: 1em 1em
  padding-bottom: page-footer-height

.post .audio-items
  border-top: 1px solid #CCC

.post .audio
  position: relative
  width: 100%
  padding: 1.5em 2.5em 1.5em 1.5em
  transition: right 0.2s ease-in
  transform: translateY(0%)
  transition: background-color 0.1s
  background-color: #F2F2F2
  cursor: pointer

  .add-to-queue
    position: absolute
    cursor: pointer
    top: 0
    right: 0
    width: 40px
    height: 100%
    text-align: center
    font-size: 1.5em
    visibility: hidden

  .add-to-queue div
    position: absolute
    top: 50%
    left: 50%
    width: 1em
    height: 1em
    margin-left: -(@width / 2)
    margin-top: -(@height / 2)

  .qorder
    display: none
    position: absolute
    width: 30px
    height: 30px
    right: 1em
    top: 50%
    margin-top: - (@width / 2)
    border-radius: 15px
    text-align: center
    font-size: 1.3em
    font-weight: bold

.post .queued
  background-color: accent-color
  color: white

.post .queued .qorder
  display: block
  border: 2px solid white

.post .title
  font-weight: bold

.post:hover .post-images
  border-color: lighten(accent-color, 40%)