@import 'nib'
@import '_config'

#player
  position: absolute
  bottom: -100%
  transition: bottom 0.2s ease-in
  width: 100%
  height: 100%
  background-color: #333
  color: #FFF

.current-track
  position: absolute
  height: 100%
  left: 100px
  padding: 0.6em 0

.title
  font-size: 1.2em

btn-width = 40px
#player .btn-group
  width: 100%

#player .btn-group :first-child
  float: left

#player .btn-group :last-child
  float: right

.play-btns
  width: btn-width * 3 !important
  position: absolute
  right: 100px

.play-btns .btn
  vertical-align: baseline
  width: btn-width !important
  font-size: 2em

#btn-play
  font-size: 3em

.progress
  width: 100%
  height: 15px
  position: absolute
  bottom: 100%
  cursor: pointer

.progress > *
  height: 5px
  width: 0
  bottom: 0
  left: 0

.progress:hover
  .back-line, .progress-line
    height: 15px

.progress .back-line
  position: absolute
  background-color: rgba(0,0,0,0.2)
  transition: width 0.2s linear, height 0.1s ease-in
  transition-delay: 0.1s

.progress .progress-line
  position: absolute
  background-color: accent-color
  transition: height 0.1s ease-in
  transition-delay: 0.1s
