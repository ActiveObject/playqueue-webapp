@import 'nib'
@import '_config'

#group, .group-layout, #wall-layout, .wall
  height: 100%

.wall
  border-left: 1px solid #DDD
  width: 0

.post
  position: absolute
  width: 500px
  height: 100%
  border-right: 1px solid #DDD

  .post-images
    width: 100%
    height: 300px
    overflow: hidden
    border: 5px solid #EEE
    transition: border-color 0.1s

    img
      width: 100%

  header
    margin: 0 0 1.5em 0
    min-height: 50px

    img
      float: left
      margin-right: 1em

.post-header-title
  font-size: 1.1em

.post-header-date
  font-size: 0.9em
  color: #999

.post-header-text
  font-size: 0.9em

.post > div
  padding: 1em 2em

.post .audio-items
  padding: 1em 0

.post .audio
  position: relative
  width: 100%
  padding: 1em 2.5em 1em 0.5em
  transition: right 0.2s ease-in
  -webkit-transform: translateY(0%)

  .add-to-queue
    position: absolute
    cursor: pointer
    top: 0
    right: 0
    width: 40px
    height: 100%
    text-align: center
    font-size: 1.5em
    visibility: hidden

  .add-to-queue div
    position: absolute
    top: 50%
    left: 50%
    width: 1em
    height: 1em
    margin-left: -(@width / 2)
    margin-top: -(@height / 2)

.post .queued .add-to-queue
  visibility: visible !important
  color: accent-color

.post .audio:hover .add-to-queue
  visibility: visible

.post .title
  font-weight: bold

.post:hover .post-images
  border-color: lighten(accent-color, 40%)