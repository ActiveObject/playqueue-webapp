@import 'nib'
@import '_config'

btn-height = 20px
.actions
  height: btn-height
  margin: auto
  position: absolute
  top: 0
  bottom: 0
  right: 0
  padding: 0 1em
  font-size: 1.3em

.actions div
  display: inline-block
  padding: 0 0.7em
  background-color: #333
  color: white
  line-height: btn-height
  cursor: pointer
  visibility: hidden

.actions div:hover
  background-color: accent-color

.actions div:active
  background-color: darken(accent-color, 30%)