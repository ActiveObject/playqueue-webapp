@import 'nib'
@import '_config'

.tracklist
  position: absolute
  width: 450px
  height: 100%
  left: -(@width)
  top: 0
  bottom: 0
  background-color: white
  border-color: #E2E2E2
  border-style: solid
  border-width: 0 1px
  color: #555
  z-index: 2000
  transition: left 0.2s ease-in

  .title
    font-size: 1.2em

  .artist
    padding-top: 0.2em
    font-size: 1em

  .source
    visibility: hidden

  .wrapper
    height: 100%

.tracklist.active
  left: 80px

.tracklist .list
  list-style: none
  margin: 0
  padding: 0
  width: 100%

.tracklist-item
  width: 100%
  padding: 1.7em 6em 1.7em 1em
  font-size: 1em
  transition: top 0.2s ease-out, background-color 0.1s
  color: #333
  background-color: rgba(238,238,238, 0)
  z-index: 100

  .qorder
    position: absolute
    top: 50%
    right: 1em
    margin-top: -0.8em
    padding: 0 0.7em

    text-align: center
    font-size: 1.2em

    border: 2px solid white
    border-radius: 1em

    background-color: white
    color: darken(accent-color, 20%)

    transition: opacity 0.5s ease
    opacity: 0

.tracklist-item:hover
  background-color: rgba(238,238,238, 0.6)
  color: #333

  .actions div
    visibility: visible

.tracklist .queued
  background-color: darken(accent-color, 20%) !important
  color: white

  .actions div
    visibility: hidden

  .qorder
    opacity: 1

.tracklist .queued:hover
  background-color: darken(accent-color, 10%) !important

@media screen and (max-width: 600px)
  .tracklist.active
    width: 100%
    right: 0 !important
    left: 0 !important