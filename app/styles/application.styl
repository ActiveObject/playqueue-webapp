@import 'nib'
@import '_config'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

html
  width: 100%
  height: 100%

body
  margin: 0
  padding: 0

  width: 100%
  height: 100%

  font-family: PT Sans, sans-serif
  font-size: 0.8em

  overflow: hidden
  user-select: none;

body > footer
  height: page-footer-height
  width: 100%

  position: absolute
  bottom: -@height
  transition: bottom 0.3s ease-out

  z-index: 3000

  .btn:hover
    transform: scale(1.2)

body > footer:hover #player
  bottom: 0

body > footer.active
  bottom: 0

#main-layout
  position: absolute
  top: page-header-height
  bottom: 0
  width: 100%
  overflow: hidden

#visualization
  display: none
  position: absolute
  left: 4em
  bottom: 4em

#library
  position: absolute
  top: 0
  width: 100%
  height: 100%

.stack > .item
  position: absolute
  height: 100%
  width: 100%
  transition: opacity 0.2s linear, left 0.3s ease-in, transform 0.1s ease-out
  opacity: 0
  left: 100px
  transform: scale(1)

.stack > .item.active
  transition: opacity 0.3s ease-in, left 0.3s ease-in
  left: 0
  opacity: 1
  z-index: 1000

.content-overlay
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: -1
  background-color: rgba(255,255,255, 0)
  transition: background-color 0.3s linear

.content-overlay.active
  z-index: 1001
  background-color: rgba(255,255,255, 0.9)

.blind
  transition: transform 0.3s ease-out !important
  transform: scale(0.8) !important

#albums, #groups
  overflow: visible !important

#splash
  color: accent-color

  .logo
    position: absolute
    left: 50%
    top: 50%

    width: 200px
    height: 200px

    margin-left: -100px
    margin-top: -100px

    font-size: 15em
    transition: color 0.3s linear

#splash.noactive
  color: transparent