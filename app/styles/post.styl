@import 'nib'
@import '_config'

.wall
  width: 0
  overflow: visible

.post
  position: absolute
  width: 550px
  overflow: visible !important
  height: 100%
  transition: background-color 0.1s linear
  background-color: white

  .post-images
    width: 100%
    overflow: hidden
    transition: border-color 0.1s, max-height 0.2s ease-in

    img
      width: 100%

  header
    padding: 1.5em
    color: #777
    box-sizing: content-box
    background-color: rgba(0,0,0,0.05)

    img
      float: left
      margin-right: 1em

    .post-header-text
      transition: height 0.2s ease-out
      height: 1.5em
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis

.post:nth-child(odd)
  background-color: #F5F5F7

@media screen and (min-height: 440px)
  .post-images
    max-height: 300px !important

@media screen and (min-height: 700px)
  .post-images
    max-height: 400px !important

@media screen and (min-height: 800px)
  .post-images
    max-height: 500px !important

@media screen and (min-height: 1000px)
  .post-images
    max-height: 600px !important

.post-header-title
  font-size: 1.1em

.post-header-date
  font-size: 0.9em
  color: #777

.post-header-text
  font-size: 0.9em

.post .audio
  position: relative
  width: 100%
  padding: 1.5em 2.5em 1.5em 1.5em
  transition: right 0.2s ease-in
  transform: translateY(0%)
  transition: background-color 0.1s

  .qorder
    position: absolute
    top: 50%
    right: 1em
    margin-top: -0.8em
    padding: 0 0.5em

    text-align: center
    font-size: 1.2em

    border: 2px solid white
    border-radius: 1em

    background-color: white
    color: accent-color

    transition: opacity 0.5s ease
    opacity: 0

.post .audio:hover
  background-color: rgba(0, 0, 0, 0.05)

  .add-to-queue
    visibility: visible

.post .queued
  background-color: accent-color
  color: white

  .add-to-queue
    visibility: hidden !important

.post .queued:hover
  background-color: darken(accent-color, 10%) !important

.post .queued .qorder
  opacity: 1

.post .title
  font-weight: bold

.post:hover .post-images
  border-color: lighten(accent-color, 40%)