@import 'nib'
@import '_config'

#player
  position: absolute
  top: 0
  width: 100%
  height: player-height
  background-color: #333
  color: #E2E2E2
  font-size: 1.2em

#played-track
  position: absolute
  width: 100%
  height: 100%
  padding: 0 5em
  text-align: center
  line-height: player-height
  font-size: 1em
  z-index: 20

  .artist
    color: #DDD
    font-weight: bold

.progress
  width: 100%
  height: 100%
  position: absolute
  cursor: pointer
  z-index: 100

.back-line
  z-index: 10
  background-color: rgba(0,0,0,0.2)

.progress-line
  background-color: accent-color
  z-index: 10

.progress-line:after
  content: ""
  position: absolute
  width: 100%
  height: 100%
  opacity: 0.7
  background: transparent url('../images/bg_overlay_review.png') center top repeat;

.duration
  transition: opacity 0.1s
  position: absolute
  height: 100%
  z-index: 15
  font-family: PT Sans, sans-serif
  line-height: player-height
  margin: 0 1em
  font-size: 1em
