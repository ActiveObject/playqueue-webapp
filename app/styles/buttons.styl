@import 'nib'
@import '_config'

.header-controls
  float: right
  border-left: 1px solid lighten(accent-color, 20%)
  height: page-header-height
  overflow: hidden

.header-controls .btn
  background-color: accent-color
  width: page-header-height
  font-size: 5em
  line-height: page-header-height + 10px
  margin: 0
  border-right: 1px solid lighten(accent-color, 20%)

.header-controls .btn:hover
  background-color: lighten(accent-color, 10%)

.header-controls .btn.active
  background-color: darken(accent-color, 20%) !important

.play-controls
  margin: 0 10px
  float: right

.btn
  margin: 0 10px
  font-size: 3em
  text-align: center
  float: left
  cursor: pointer
  transition(0.1s, -webkit-transform, linear)

.appbar-btn:after
  content: "\e00c"
  font-family: 'icomoon'
  speak: none
  font-style: normal
  font-weight: normal
  line-height: 1
  -webkit-font-smoothing: antialiased

.appbar-btn:active:after
  content: "\e015"

.appbar-btn:active > *
  color: accent-color

.appbar-btn > *
  position: absolute
  top: 0

#btn-play
  font-size: 4.5em
  margin: 0 0

#back-btn
  width: 80px
  margin: 0

#back-btn > *
  width: 80px
