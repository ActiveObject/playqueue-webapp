@import 'nib'
@import '_config'

.add-to-queue
  position: absolute
  top: 0
  right: 0
  width: 6em
  height: 100%
  text-align: center
  visibility: hidden
  cursor: pointer

.add-to-queue div
  position: absolute
  top: 50%
  left: 50%
  width: 2.5em
  height: 1.5em
  padding: 0.2em 0.7em
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  background-color: #333
  color: white
  font-size: 1.5em
  line-height: 1.3

.add-to-queue div:hover
  background-color: accent-color

.add-to-queue div:active
  background-color: darken(accent-color, 30%)