@import 'nib'
@import '_config'

.btn-group
  position: absolute
  top: 0
  height: 100%

.right-btn-group
  right: 0

.left-btn-group
  left: 0

.btn
  margin: 0 10px
  font-size: 3em
  text-align: center
  float: left
  cursor: pointer
  transition(0.1s, -webkit-transform, linear)

.appbar-btn:after
  content: "\e00c"
  font-family: 'icomoon'
  speak: none
  font-style: normal
  font-weight: normal
  line-height: 1
  -webkit-font-smoothing: antialiased

.appbar-btn:active:after
  content: "\e015"

.appbar-btn:active > *
  color: accent-color

.appbar-btn > *
  position: absolute
  top: 0

#btn-play
  font-size: 4.5em
  margin: 0 0

#back-btn
  width: 80px
  margin: 0

#back-btn > *
  width: 80px
