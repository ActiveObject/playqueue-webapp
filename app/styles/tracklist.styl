@import 'nib'
@import '_config'

.tracklist
  position: absolute
  width: 450px
  height: 100%
  right: -(@width)
  top: 0
  bottom: 0
  background-color: #F2F2F2
  border-color: #E2E2E2
  border-style: solid
  border-width: 0 1px
  color: #555
  z-index: 2000
  transition: right 0.2s ease-in

  .title
    font-size: 1.2em

  .artist
    padding-top: 0.2em
    font-size: 1em

  .source
    visibility: hidden

  .add-to-queue
    position: absolute
    top: 0
    right: 0
    width: 40px
    height: 100%
    text-align: center
    font-size: 1.5em
    visibility: hidden

  .add-to-queue div
    position: absolute
    top: 50%
    left: 50%
    width: 1em
    height: 1em
    margin-left: -(@width / 2)
    margin-top: -(@height / 2)

  .wrapper
    height: 100%

.tracklist.active
  right: 50px

.tracklist .list
  list-style: none
  margin: 0
  padding: 0
  width: 100%
  cursor: pointer

.tracklist-item
  width: 100%
  cursor: pointer
  padding: 1.5em 40px 1.5em 1em;
  font-size: 1em
  transition: top 0.2s ease-out
  color: #333
  z-index: 100

.tracklist-item:hover
  color: #333

  .add-to-queue
    visibility: visible

.tracklist .queued
  background-color: accent-color
  color: white

@media screen and (max-width: 600px)
  .tracklist.active
    width: 100%
    right: 0 !important